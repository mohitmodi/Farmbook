<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background2" >

    <ImageView
        android:id="@+id/main_bar"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_alignParentTop="true"
        android:background="@color/lemongreen" />

    <ImageButton
        android:id="@+id/main_barbutton1"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@id/main_bar"
        android:layout_margin="5dip"
        android:background="@android:color/transparent"
        android:src="@drawable/notification_48x48" />

    <ImageButton
        android:id="@+id/main_barbutton2"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_alignTop="@id/main_barbutton1"
        android:layout_marginLeft="5dip"
        android:layout_toLeftOf="@id/main_barbutton1"
        android:background="@android:color/transparent"
        android:src="@drawable/camera_48x48" />

    <ImageButton
        android:id="@+id/main_barbutton3"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_alignTop="@id/main_barbutton1"
        android:layout_marginLeft="5dip"
        android:layout_toLeftOf="@id/main_barbutton2"
        android:background="@android:color/transparent"
        android:src="@drawable/wall_48x48" />

    <ImageButton
        android:id="@+id/main_button1"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="130dip"
        android:background="@android:color/transparent" />

    <ImageButton
        android:id="@+id/main_button2"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:layout_alignTop="@id/main_button1"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:src="@drawable/friend_circle" />

    <ImageButton
        android:id="@+id/main_button3"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/main_button1"
        android:layout_marginRight="20dip"
        android:background="@android:color/transparent"
        android:src="@drawable/add_friend" />

    <ImageButton
        android:id="@+id/main_button4"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:layout_alignLeft="@id/main_button1"
        android:layout_below="@id/main_button1"
        android:layout_marginTop="20dip"
        android:background="@android:color/transparent"
        android:src="@drawable/camera" />

    <ImageButton
        android:id="@+id/main_button5"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:layout_alignLeft="@id/main_button2"
        android:layout_alignTop="@id/main_button4"
        android:background="@android:color/transparent"
        android:src="@drawable/wall" />

    <ImageButton
        android:id="@+id/main_button6"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:layout_alignLeft="@id/main_button3"
        android:layout_alignTop="@id/main_button4"
        android:background="@android:color/transparent"
        android:src="@drawable/upload_server" />

    <ImageButton
        android:id="@+id/main_button7"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:layout_alignLeft="@id/main_button1"
        android:layout_below="@id/main_button4"
        android:layout_marginTop="20dip"
        android:background="@android:color/transparent"
        android:src="@drawable/record_audio" />

    <ImageButton
        android:id="@+id/main_button8"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:layout_alignLeft="@id/main_button2"
        android:layout_alignTop="@id/main_button7"
        android:background="@android:color/transparent"
        android:src="@drawable/weather" />

    <ImageButton
        android:id="@+id/main_button9"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:layout_alignLeft="@id/main_button3"
        android:layout_alignTop="@id/main_button7"
        android:background="@android:color/transparent"
        android:src="@drawable/shopping" />

</RelativeLayout>